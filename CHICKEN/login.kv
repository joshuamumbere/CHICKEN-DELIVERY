MDScreen:
    name: "second"
    FitImage:
        source: "pexels-valeria-boltneva-1123249.jpg"
        pos_hint: {'center_x':.5,'center_y':.5}
    MDLabel:
        text: "Welcome"
        font_size: "48dp"
        halign: "center"
        color: "white"
        pos_hint: {'center_y':.8}
    MDTextField:
        hint_text: "User Name"
        icon_right: 'account'
        font_size: "20dp"
        color: "white"
        size_hint_x: .85
        pos_hint:{'center_x':.5,'center_y':.65}
        on_text: self.text=self.text.replace("","")
        write_tab: False
    MDTextField:
        id: pswd
        hint_text: "Password"
        color_mode: 1, 1, 1, 1
        password: not cb.active  # Toggle password visibility
        icon_right: 'eye-off'
        font_size: "20dp"
        size_hint_x: .85
        pos_hint: {'center_x': .5, 'center_y': .5}
        on_text: self.text = self.text.replace("", "")
        write_tab: False
        on_icon_right: app.toggle_password_visibility(pswd, cb)
    BoxLayout:
        size_hint: .85, None
        height: "20dp"
        pos_hint: {'center_x':.5,'center_y':.4}
        spacing: "5dp"
        MDCheckbox:
            id: cb
            size_hint: None, None
            color: "white"
            height: "30dp"
            width: "30dp"
            pos_hint: {'center_x':.5,'center_y':.5}
        MDLabel:
            text: "[ref=show Password]show Password[/ref]"
            markup: True
            pos_hint: {'center_x':.5,'center_y':.5}
    BoxLayout:
        size_hint: .6, None
        height: "30dp"
        pos_hint: {'center_x':.5,'center_y':.3}
        spacing: "15dp"
        MDFlatButton:
            text: "SIGN UP"
            font_size: "22dp"
            size_hint_x: 1
            md_bg_color: "white"
            on_release:
                app.root.current="first"
                root.manager.transition.direction="left"
        MDFlatButton:
            text: "LOG IN"
            font_size: "22dp"
            size_hint_x: 1
            md_bg_color: "white"
            on_release:
                app.root.current="starter"
                root.manager.transition.direction="up"